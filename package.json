{
  "name": "loan-planner",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "format": "biome check --write .",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "ESBUILD_BINARY_PATH=node_modules/esbuild-wasm/bin/esbuild vitest run",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "hono": "^4.9.4",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "esbuild-wasm": "^0.25.9",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.17.0"
  }
}
